@model EcommerceApp.Models.Category
@{
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="m-5">
    <h2>@EcommerceApp.Resources.most.details</h2>

    <div>
        <h4>@EcommerceApp.Resources.Models.CategoryModel.libele</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.libele)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.libele)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.date_ajout)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.date_ajout)
            </dd>

        </dl>
    </div>
    <p>
        @if (User.IsInRole("Owner"))
        {
            @Html.ActionLink(@EcommerceApp.Resources.most.edit, "Edit", new { id = Model.id_category })

        }
        | @Html.ActionLink(@EcommerceApp.Resources.most.back, "Index")
    </p>
</div>