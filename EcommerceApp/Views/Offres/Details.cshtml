@model EcommerceApp.Models.Offre

@{
    if (User.IsInRole("Owner"))
    {
        Layout = "~/Views/Shared/_OwnerDashboard.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminDashboard.cshtml";
    }
}


<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="productd">
                <div class="productd-body">
                    <div class="row">
                        <div class="col">
                            <center>
                                @Html.LabelFor(model => model.libele)
                                @Html.EditorFor(model => model.libele, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </center>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <center>
                                @Html.LabelFor(model => model.taux_remise)
                                @Html.EditorFor(model => model.taux_remise, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </center>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <center>
                                @Html.LabelFor(model => model.date_ajout)
                                @Html.EditorFor(model => model.date_ajout, new { htmlAttributes = new { @Value = @Model.date_ajout.ToString("yyyy-MM-dd"), @class = "form-control", @type = "date", @readonly = "readonly" } })
                            </center>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <center>
                                @Html.LabelFor(model => model.date_expiration)
                                @Html.EditorFor(model => model.date_expiration, new { htmlAttributes = new { @Value = @Model.date_expiration.ToString("yyyy-MM-dd"), @class = "form-control", @type = "date", @readonly = "readonly" } })
                            </center>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 mx-auto">
                            <center>
                                <div class="form-group">
                                    @if(!User.IsInRole("Admin"))
                                    {
                                    <a href="@Url.Action("Edit", "Offres", new { id = Model.id_offre  })" class="text-success">
                                        @EcommerceApp.Resources.Views.Offres.Index.edit
                                    </a>
                                    }
                                </div>
                                <div class="form-group">
                                    <a href="~/Offres/Index" class="text-success">
                                        @EcommerceApp.Resources.Views.Offres.Index.backToList
                                    </a>
                                </div>
                            </center>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
