@model EcommerceApp.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section>
    <div class="jumbotron text-center">
        <h1 class="">
            @EcommerceApp.Resources.Views.Home.index.title
        </h1>
        <h3>@EcommerceApp.Resources.Views.Home.index.best_offre</h3>
        @if (ViewBag.name == "")
        {
            <a href="~/Account/Login" class="btn bg-white font-weight-bold w-15 login-btn pointer">@EcommerceApp.Resources.Views.Home.index.login</a>

        }
    </div>
</section>

<div class="m-5 p-5">
    <h2>Details</h2>

    <div>
        <h4>@EcommerceApp.Resources.Views.Products.Create.product</h4>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <dl class="dl-horizontal row">
                    <dt class="col-md-4">
                        @EcommerceApp.Resources.Views.Products.Create.product
                    </dt>

                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.title)
                    </dd>
                    <dt class="col-md-4">
                        @EcommerceApp.Resources.most.owner
                    </dt>

                    <dd class="col-md-8">
                        <a href="#" data-toggle="modal" data-target="#owner">
                            @Html.DisplayFor(model => model.ApplicationUser.UserName)
                        </a>
                    </dd>


                    <dt class="col-md-4">
                        @Html.DisplayNameFor(model => model.Category.libele)
                    </dt>

                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.Category.libele)
                    </dd>

                    @if (Model.Offre != null && Model.Offre.date_expiration > DateTime.Now)
                    {
                        <dt class="col-md-4">
                            @Html.LabelFor(model => model.Offre.libele)
                        </dt>

                        <dd class="col-md-8">
                            <span class="font-weight-bold text-success"> - @Html.DisplayFor(model => model.Offre.taux_remise) %</span>
                        </dd>
                    }


                    <dt class="col-md-4">
                        @Html.DisplayNameFor(model => model.prix)
                    </dt>

                    <dd class="col-md-8">
                        <span class="font-weight-bold"> @Model.Prix_total() DHs </span>
                    </dd>


                    <dt class="col-md-4">
                        @Html.DisplayNameFor(model => model.location)
                    </dt>

                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.location)
                    </dd>

                    <dt class="col-md-4">
                        @Html.DisplayNameFor(model => model.description)
                    </dt>
                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.description)
                    </dd>

                    <dt class="col-md-4">
                        @Html.DisplayNameFor(model => model.date_ajout)
                    </dt>

                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.date_ajout)
                    </dd>

                </dl>
            </div>
            <div class="col-md-4">
                <img src="~/Uploads/products/@Html.DisplayFor(model => model.photo)" class="img-thumbnail h-75 w-100" />

            </div>
        </div>

    </div>



</div>


<div class="modal fade" id="owner" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    @Model.ApplicationUser.UserName
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal row">
                    <dt class="col-md-4">
                        @EcommerceApp.Resources.most.owner
                    </dt>

                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.ApplicationUser.UserName)
                    </dd>

                    <dt class="col-md-4">
                        Email
                    </dt>

                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.ApplicationUser.Email)
                    </dd>

                    <dt class="col-md-4">
                        @EcommerceApp.Resources.Models.User.phone
                    </dt>

                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.ApplicationUser.PhoneNumber)
                    </dd>
                    <dt class="col-md-4">
                        @EcommerceApp.Resources.Models.User.address
                    </dt>

                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.ApplicationUser.UserAdress)
                    </dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>