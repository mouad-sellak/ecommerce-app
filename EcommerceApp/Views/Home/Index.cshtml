@model IEnumerable<EcommerceApp.Models.Product>

@{
    ViewBag.Title = "Home Page";
}



<section>
    <div class="jumbotron text-center" style="background-color: #6f03fc">
        <h1 class="">
            @EcommerceApp.Resources.Views.Home.index.title
        </h1>
        @if (ViewBag.name == "")
        {
            <a href="~/Account/Login" class="btn bg-white font-weight-bold w-15 login-btn pointer">@EcommerceApp.Resources.Views.Home.index.login</a>

        }
    </div>
</section>

<div class="container">
    <div class="title ml-5">
        <h1>@EcommerceApp.Resources.Views.Home.index.best_offre</h1>
    </div>
    <hr />
    <div class="row justify-content-center">
        <div class="col-10">
            <div id="listPage" class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6" style="min-height:200px;">
                        <div class="text-center">
                        <div class="productd row flex-row  justify-content-center flex-wrap mb-4 mr-4 p-2 pb-3 h-100">
                            <div class="productd-header border-0  mr-4 " style="min-height: 200px; width: 250px;
">
                                <img src="~/Uploads/products/@Html.DisplayFor(model => item.photo)" alt="" class="h-100" style=" width:250px;">
                            </div>
                            <div class="productd-block" >
                                <h4 class="productd-title">
                                    @Html.DisplayFor(modelItem => item.title)
                                    @if (item.Offre != null)
                                    {
                                        <span class="text-success font-weight-bold">( - @item.Offre.taux_remise                 % )</span>
                                    }
                                </h4>
                                <p class="productd-text">
                                    <span class="font-weight-bold">@Html.LabelFor(modelItem => item.prix):</span>

                                    <span class="font-weight-bold">
                                        @if (item.Offre != null)
                                        {
                                            <span class="line-through"> @item.prix DHs</span>
                                        }
                                        <span class="text-success">@item.Prix_total() DHs</span>
                                    </span>

                                    <br />
                                    <span class="font-weight-bold">@Html.LabelFor(modelItem => item.Category):</span>  @Html.DisplayFor(modelItem => item.Category.libele) <br />
                                    <span class="font-weight-bold">@Html.LabelFor(modelItem => item.location):</span>  @Html.DisplayFor(modelItem => item.location) <br />

                                </p>
                                <a href="@Url.Action("Details", "Home", new { id = item.id_product })" class="text-         success">

                                    <span class="font-weight-bold">Details</span>

                                </a>

                            </div>
                        </div>

                        </div>
                        </div>
                }
            </div>
        </div>
    </div>

    <hr />
</div>
<div class="myFooter" style="background-color: black; height: 140px; padding-top:30px;">
    <h6>&copy; ENSA FES, BOUAMLAT, SELLAK, BOUTLIH</h6>
    <h6>UNIVERSITE SIDI MOHAMED BEN ABDELLAH</h6>
    <h6>ECOLE NATIONALE DES SCIENCES APPLIQUEES - FES</h6>
</div>
