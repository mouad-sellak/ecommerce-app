@model IEnumerable<EcommerceApp.Models.FavoriteList>

@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}


<table class="table table-striped">
    <thead>
        <tr>

            <th>
                @EcommerceApp.Resources.Views.Account.Register.name
            </th>
            <th>
                @EcommerceApp.Resources.Views.Account.Register.date_join
            </th>
            <th>
                @EcommerceApp.Resources.Views.Account.Register.email
            </th>
            <th>
                @EcommerceApp.Resources.Views.Account.Register.number
            </th>
            <th>
                @EcommerceApp.Resources.Views.Account.Register.adress
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
    
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                </td>
                <td>
                    @Convert.ToDateTime(item.ApplicationUser.date_join).ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.UserAdress)
                </td>
              
                <td>
                    <a href="@Url.Action("Details", "ApplicationUsers", new { id = item.UserId })" class="text-success">
                        <i class="material-icons icon">
                            visibility
                        </i>
                    </a>
                    <a data-delete-id="@item.id_favorite" class="text-danger delete-link-favorite pointer">
                        <i class="material-icons icon " style="color:grey">
                            delete
                        </i>
                    </a>
                    @Html.Hidden("__RequestVerificationToken", @Html.AntiForgeryToken())
                </td>
            </tr>
        }
    </tbody>

</table>
