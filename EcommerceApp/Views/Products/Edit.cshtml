@model EcommerceApp.Models.Product
@if (User.IsInRole("Owner"))
{
    Layout = "~/Views/Shared/_OwnerDashboard.cshtml";
}
else if (User.IsInRole("Admin"))
{
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="m-5">
    <h2>@EcommerceApp.Resources.Views.Products.Edit.edit</h2>

    @using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Product</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id_product)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.date_ajout)
    @Html.HiddenFor(model => model.photo)
    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.id_category, EcommerceApp.Resources.Views.Shared._OwnerDashboard.model, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("id_category", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_category, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.id_offre, "Offre", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("id_offre", null, "-- Offre -- ", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_offre, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-6 col-12">

            <div class="form-group">
                @Html.LabelFor(model => model.location, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.location, new { htmlAttributes = new { @class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.location, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.prix, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.prix, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                    @Html.ValidationMessageFor(model => model.prix, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>



    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextAreaFor(model => model.description, new { htmlAttributes = new { @class = "form-control" , cols = 100, rows = 40 } })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.photo, htmlAttributes: new { @class = "control-label" })
                <div>

                    <input type="file" name="productImage" id="productImage" /> <br /><br />
                    <img src="~/Uploads/products/@Html.DisplayFor(model => model.photo)" class="img-thumbnail" style="width:48px; height:48px;" />

                    @Html.ValidationMessageFor(model => model.photo, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>
    </div>

    @*    <div class="row">
            <div class="col-md-6 col-12">

                <div class="form-group">
                    <div>
                        @Html.CheckBoxFor(model => model.disponible, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.LabelFor(model => model.disponible, htmlAttributes: new { @class = "control-label" })

                        @Html.ValidationMessageFor(model => model.disponible, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>*@
    <div class="row">
        <div class="col-md-6 col-12">

            <div class="form-group">
                <div>
                    <input type="submit" value=@EcommerceApp.Resources.most.save class="btn btn-primary" />
                </div>
            </div>
        </div>

    </div>

</div>
    }

    <div>
        @Html.ActionLink(EcommerceApp.Resources.most.back, "Index")
    </div>
</div>