@model EcommerceApp.Models.Product
@{
    Layout = "~/Views/Shared/_OwnerDashboard.cshtml";
}

<div class="m-5">

    <h2>@EcommerceApp.Resources.Views.Products.Create.title</h2>

    @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@EcommerceApp.Resources.Views.Products.Create.product</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.matricul, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.matricul, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.matricul, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.id_marque, EcommerceApp.Resources.Views.Shared._OwnerDashboard.model, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("id_marque", null,"--Marque--", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_marque, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.id_offre, "Offre", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("id_offre", null, "--Offre--", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_offre, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.nb_passagers, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.nb_passagers, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nb_passagers, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.couleur, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.couleur, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.couleur, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.prix, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.prix, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                    @Html.ValidationMessageFor(model => model.prix, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.photo, htmlAttributes: new { @class = "control-label" })
                <div>
                    <input type="file" name="carImage" id="carImage" class="form-control-file" />
                    @Html.ValidationMessageFor(model => model.photo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-6 col-12">

            <div class="form-group">
                @Html.LabelFor(model => model.km, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.km, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                    @Html.ValidationMessageFor(model => model.km, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.anne, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.anne, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.anne, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

