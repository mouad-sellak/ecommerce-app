
@model LocationVoiture.Models.Offre

@{
    //ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_OwnerDashboard.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        @Html.HiddenFor(model => model.id_offre)
                        <div class="row">
                            <div class="col">
                                <center>
                                    @Html.LabelFor(model => model.libele)
                                    @Html.EditorFor(model => model.libele, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.libele, "", new { @class = "text-danger" })
                                </center>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <center>
                                    @Html.LabelFor(model => model.taux_remise)
                                    @Html.EditorFor(model => model.taux_remise, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.taux_remise, "", new { @class = "text-danger" })
                                </center>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <center>
                                    @Html.LabelFor(model => model.date_expiration)
                                    @Html.EditorFor(model => model.date_expiration, new { htmlAttributes = new { @Value = @Model.date_expiration.ToString("yyyy-MM-dd"), @class = "form-control", @type = "date" } })
                                    @Html.ValidationMessageFor(model => model.date_expiration, "", new { @class = "text-danger" })
                                </center>
                            </div>
                        </div>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col">
                                <hr>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8 mx-auto">
                                <center>
                                    <div class="form-group">
                                        <input type="submit" value=@LocationVoiture.Resources.Views.Offres.Index.edit class="btn btn-default" />
                                    </div>
                                    <div class="form-group">
                                        <a href="~/Offres/Index" class="text-success">
                                            @LocationVoiture.Resources.Views.Offres.Index.backToList
                                        </a>
                                    </div>
                                </center>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


